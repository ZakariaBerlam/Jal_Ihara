<!-- edittext_border.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Border properties -->
    <stroke
        android:width="2dp"
        android:color="#F0C929" />

    <!-- Optionally, you can set the background color for the EditText -->
    <solid android:color="#871111" />

    <!-- Optionally, you can add corner radius for a rounded appearance -->
    <corners android:radius="8dp" />

</shape>
